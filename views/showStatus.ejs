        <div class="status">
          <b>Status : </b>
          <% if(user.status){ %>
          <font style="margin-left: 0px; font-weight: bold" color="#4cd137">
            Delivered
          </font>
          <%}else{%>
          <font style="margin-left: 0px; font-weight: bold" color="#ff9f1a">
            Undelivered
          </font>
          <%}%>
          <b>Date : </b> <%= user.date %> <b>Time : </b> <%= user.time %>
        </div>
        <%if(user.status){%>
        <div class="dtime">
          <b>Delivered on : </b>
          <b>Date : </b> <%= user.ddate %> <b>Time : </b> <%= user.dtime %>
        </div>
        <%}%>
      </div>
      <% }else{ %>
      <div class="not">
        <h1>ðŸš«</h1>
